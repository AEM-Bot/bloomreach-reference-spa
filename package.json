{
  "name": "@bloomreach/example-saas",
  "description": "Example React SPA for brX SaaS",
  "version": "0.3.0-saas",
  "private": true,
  "engines": {
    "node": "14",
    "npm": "7"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ext js,ts,tsx src"
  },
  "dependencies": {
    "@bloomreach/connector-components-react": "0.9.0-beta3",
    "@bloomreach/react-sdk": "15.4.3-react17-1",
    "@bloomreach/spa-sdk": "15.4.3-react17-1",
    "@fortawesome/fontawesome-svg-core": "~1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15",
    "@fortawesome/react-fontawesome": "^0.1",
    "@react-google-maps/api": "^2.2.0",
    "axios": "^0.21.4",
    "bootstrap": "^4.5",
    "cookie": "^0.4.1",
    "next": "^12.1.0",
    "path-parse": "^1.0.7",
    "react": "^17.0.2",
    "react-bootstrap": "^1.4",
    "react-cookie": "^4.0.3",
    "react-cookie-consent": "^7.2.1",
    "react-dom": "^17.0.2",
    "react-player": "^2.6"
  },
  "devDependencies": {
    "@bloomreach/eslint-config-next": "^1.1.4",
    "@types/googlemaps": "^3.43",
    "@types/markerclustererplus": "^2.1",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "eslint": "^7.12",
    "node-sass": "^4.14",
    "typescript": "~4.5"
  },
  "eslintConfig": {
    "extends": [
      "@bloomreach/eslint-config-next",
      "plugin:react/jsx-runtime"
    ],
    "overrides": [
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "react/require-default-props": "off"
        }
      }
    ],
    "rules": {
      "react/jsx-props-no-spreading": "off",
      "react/no-danger": "off",
      "react/display-name": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_br_uid_2"
          ]
        }
      ],
      "implicit-arrow-linebreak": "off",
      "@typescript-eslint/no-use-before-define": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
